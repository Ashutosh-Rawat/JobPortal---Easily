<header class="fixed-top">
  <nav class="navbar navbar-expand-md navbar-dark custom-header pr-4 py-0">
    <a class="navbar-brand" href="/">
      easily
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/jobs">Jobs</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Recruiter
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if (!locals.currentUser) { %>
              <a class="dropdown-item" href="/register">Register</a>
              <a class="dropdown-item" href="/login">Sign In</a>
            <% } else { %>
              <a class="dropdown-item" href="/jobs/add">Post a Job</a>
              <a class="dropdown-item" href="/postedJobs">Posted Jobs</a>
            <% } %>
          </div>
        </li>
      </ul>
      <% if (locals.currentUser) { %>
        <div class="navbar-text ml-auto d-flex align-items-center">
          <div class="dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="text-primary font-weight-bold"><%= locals.currentUser.name %></span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
              <a class="dropdown-item" href="/change-pass">Update Password</a>
              <a class="dropdown-item" href="/logout">Logout</a>
              <span class="dropdown-item delete-user-btn bg-dark" onclick="getDeleteUser('<%= locals.currentUser.userId %>')">Delete User</h5>
            </div>
          </div>
          <div class="avatar-circle">
            <span class="initials"><%= locals.currentUser.name.charAt(0).toUpperCase() %></span>
          </div>
        </div>
      <% } %>
    </div>
  </nav>
</header>
