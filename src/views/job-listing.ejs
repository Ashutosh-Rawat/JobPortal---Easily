<div class="container-fluid mt-3">
  <% if (data.length === 0) { %>
    <div class="d-flex w-100 justify-content-center align-items-center" style="height: 80vh;">
      <div class="glass-container text-center">
        <img src="https://cdn.pixabay.com/photo/2016/05/14/18/23/emoticon-1392275_1280.png" alt="Sad Smiley Face" style="width: 115px; height: 115px;">
        <p class="text-muted" style="font-size: 2rem;">Sorry, no jobs available right now.</p>
        <% if (user) { %>
          <button class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#addJobModal">Post A Job</button>
        <% } %>
      </div>
    </div>
  <% } else { %>
    <div class="row justify-content-center">
      <% data.forEach(job => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="glass-tile-gradient-1 job-tile shadow h-100">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= job.companyName %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= job.jobDesign %></h6>
              <p class="card-text">
                <strong>Location:</strong> <%= job.jobLocation %><br>
                <strong>Package:</strong> â‚¹<%= job.salary %> LPA<br>
                <strong>Skills:</strong>
                <span class="d-block">
                  <% job.skillsRequired.forEach(skill => { %>
                    <span class="badge bg-secondary me-1"><%= skill %></span>
                  <% }) %>
                </span>
              </p>
              <a href="/jobs/<%= job.jobId %>" class="btn btn-primary w-100">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
