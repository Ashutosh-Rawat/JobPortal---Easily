<div class="container mt-5 col-md-5">
  <div class="inner-container">
    <h1 class="text-center mb-4">Submit Job Application</h1>
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form action="apply" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="applicantName">Name</label>
        <input type="text" class="form-control" id="applicantName" name="name" required>
      </div>
      <div class="form-group">
        <label for="applicantEmail">Email</label>
        <input type="email" class="form-control" id="applicantEmail" name="email" required>
      </div>
      <div class="form-group">
        <label for="applicantContact">Contact</label>
        <input type="number" class="form-control" id="applicantContact" name="contact" required>
      </div>
      <div class="form-group">
        <label for="resumePath" class="d-block">Resume</label>
        <input type="file" class="d-block" id="resumePath" name="resumePath" accept=".pdf" required>
      </div>
      <button type="submit" class="btn btn-outline-primary">Submit Application</button>
    </form>
  </div>
</div>
