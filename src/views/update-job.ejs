<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
<div class="container">
  <div class="inner-container">
    <h1 class="text-center mb-3">Update Job</h1>
    <% if (locals.formErr) { %>
      <div class="alert alert-danger">
        <%= locals.formErr %>
      </div>
    <% } %>
    <form id="updateJobForm" action="update" method="POST">
      <input type="hidden" id="jobId" name="jobId" value="<%= data.jobId %>">
      <input type="hidden" id="jobCategory" name="jobCategory" value="<%= data.jobCategory %>">
      <input type="hidden" id="jobDesign" name="jobDesign" value="<%= data.jobDesign %>">
      <input type="hidden" id="companyName" name="companyName" value="<%= data.companyName %>">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="jobCategoryDisplay">Job Category</label>
          <input type="text" class="form-control" id="jobCategoryDisplay" value="<%= data.jobCategory %>" disabled>
        </div>
        <div class="form-group col-md-6">
          <label for="jobDesignDisplay">Job Designation</label>
          <input type="text" class="form-control" id="jobDesignDisplay" value="<%= data.jobDesign %>" disabled>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="jobLocation">Job Location</label>
          <input type="text" class="form-control" id="jobLocation" name="jobLocation" value="<%= data.jobLocation %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="companyNameDisplay">Company Name</label>
          <input type="text" class="form-control" id="companyNameDisplay" value="<%= data.companyName %>" disabled>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="salary">Salary</label>
          <input type="text" class="form-control" id="salary" name="salary" value="<%= data.salary %>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="applyBy">Apply By</label>
          <input type="date" class="form-control" id="applyBy" name="applyBy" value="<%= data.applyBy %>" required>
        </div>
      </div>
      <div class="form-group">
        <label for="skillsRequired">Skills Required</label>
        <select id="skillsRequired" name="skillsRequired" class="form-control" multiple></select>
      </div>
      <div class="form-group">
        <label for="numberOfOpenings">Number of Openings</label>
        <input type="number" class="form-control" id="numberOfOpenings" name="numberOfOpenings" value="<%= data.numberOfOpenings %>" required>
      </div>
      <button type="button" onclick="getUpdateJobAuth('<%= data.jobId %>')" class="btn btn-outline-primary">Update Job</button>
    </form>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
<script src="/js/jobDesignations.js" type="module"></script>
