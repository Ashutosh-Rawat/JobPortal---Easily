<!-- Job Update Modal -->
<div class="modal fade" id="updateJobModal" tabindex="-1" aria-labelledby="updateJobModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title" id="updateJobModalLabel">Update Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal Body -->
      <div class="modal-body">
        <form id="updateJobForm" method="POST" action="/jobs/update">
          <!-- Job Category -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="jobCategory" class="form-label">Job Category</label>
              <select id="jobCategory" class="form-select" required>
                <!-- Options populated dynamically -->
              </select>
            </div>
            <div class="col-md-6">
              <label for="designation" class="form-label">Job Designation</label>
              <select id="designation" class="form-select" name="designation" required>
                <!-- Options populated dynamically -->
              </select>
            </div>
          </div>
          <!-- Skills Required -->
          <div class="row mb-3">
            <div class="col-md-12">
              <label for="skillsRequired" class="form-label">Skills Required</label>
              <select id="skillsRequired" name="skills[]" class="form-select" multiple required>
                <!-- Options populated dynamically -->
              </select>
            </div>
          </div>
          <!-- Openings -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="openings" class="form-label">Number of Openings</label>
              <input type="number" id="openings" name="openings" class="form-control" min="1" required>
            </div>
          </div>
          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Update Job</button>
        </form>
      </div>
    </div>
  </div>
</div>
