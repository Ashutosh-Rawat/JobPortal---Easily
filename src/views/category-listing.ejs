<div class="container my-5">
  <h1 class="text-center text-primary mb-4">Job Categories</h1>

  <div class="accordion" id="categoryAccordion">
    <% data.forEach((category, index) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= index %>">
          <button 
            class="accordion-button <% if(index !== 0) { %>collapsed<% } %>" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#collapse<%= index %>" 
            aria-expanded="<%= index === 0 ? 'true' : 'false' %>" 
            aria-controls="collapse<%= index %>"
          >
            <%= category.jobCategory %>
          </button>
        </h2>
        <div 
          id="collapse<%= index %>" 
          class="accordion-collapse collapse <% if(index === 0) { %>show<% } %>" 
          aria-labelledby="heading<%= index %>" 
          data-bs-parent="#categoryAccordion"
        >
          <div class="accordion-body">
            <h5 class="text-secondary">Job Roles:</h5>
            <ul>
              <% category.jobNames.forEach(job => { %>
                <li><%= job %></li>
              <% }) %>
            </ul>
            <h5 class="text-secondary">Skills Needed:</h5>
            <ul>
              <% category.skillsNeeded.forEach(skill => { %>
                <li><%= skill %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
