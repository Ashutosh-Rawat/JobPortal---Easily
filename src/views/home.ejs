<div class="home-page-container">
  <section class="hero-section text-center" style="background-image: url('https://source.unsplash.com/1600x900/?office,teamwork'); background-size: cover; background-position: center;">
    <div class="glass-container mt-4">
      <h1 class="fw-bold text-dark">Welcome to <span style="color: var(--secondary-color);">Easily</span></h1>
      <p class="lead text-muted">Your career is just a step away. Find your dream job or hire top talent today.</p>
      <% if (locals.user && locals.user.lastVisit) { %>
        <p class="small text-muted">Last Visit: <%= locals.user.lastVisit %></p>
      <% } else { %>
        <p class="small text-muted">Welcome! Start exploring opportunities.</p>
      <% } %>
      <div class="mt-4">
        <a href="/jobs" class="btn btn-primary btn-lg custom-btn">See Job Listings</a>
        <% if (!locals.user) { %>
          <button class="btn btn-secondary btn-lg custom-btn-secondary" data-bs-toggle="modal" data-bs-target="#loginModal">Recruiter Login</button>
        <% } else { %>
          <button class="btn btn-secondary btn-lg custom-btn-secondary" data-bs-toggle="modal" data-bs-target="#addJobModal">Post Jobs</button>
        <% } %>
      </div>
    </div>
  </section>

  <section class="features-section text-center mt-5 pt-5">
    <div class="container">
      <h2 class="fw-bold text-primary mb-4">Why Choose Us?</h2>
      <div class="row mt-4 gx-4">
        <div class="col-md-4">
          <div class="job-tile glass-tile-gradient-1">
            <h4 class="text-dark">Massive Network</h4>
            <p class="text-muted">Connect with hundreds of employers and find the perfect fit.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="job-tile glass-tile-gradient-2">
            <h4 class="text-dark">Smart Tools</h4>
            <p class="text-muted">Our tools are designed to make job search easy and efficient.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="job-tile glass-tile-gradient-3">
            <h4 class="text-dark">Career Growth</h4>
            <p class="text-muted">Find roles that push your boundaries and enhance your career.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
