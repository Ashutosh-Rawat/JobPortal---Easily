<!-- Job Add Modal -->
<div class="modal fade" id="addJobModal" tabindex="-1" aria-labelledby="addJobModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title" id="addJobModalLabel">Add Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal Body -->
      <div class="modal-body">
        <form id="addJobForm" method="POST" action="/jobs/add">
          <!-- Job Category -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="jobCategory" class="form-label">Job Category</label>
              <select id="jobCategory" class="form-select" required>
                <!-- Options populated dynamically -->
              </select>
            </div>
            <div class="col-md-6">
              <label for="designation" class="form-label">Job Designation</label>
              <select id="designation" class="form-select" name="designation" required>
                <!-- Options populated dynamically -->
              </select>
            </div>
          </div>
          <!-- Location -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="location" class="form-label">Job Location</label>
              <input type="text" id="location" name="location" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label for="companyName" class="form-label">Company Name</label>
              <input type="text" id="companyName" name="companyName" class="form-control" required>
            </div>
          </div>
          <!-- Salary -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="salary" class="form-label">Salary</label>
              <input type="number" id="salary" name="salary" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label for="applyBy" class="form-label">Apply By Date</label>
              <input type="date" id="applyBy" name="applyBy" class="form-control" required>
            </div>
          </div>
          <!-- Skills Required -->
          <div class="row mb-3">
            <div class="col-md-12">
              <label for="skillsRequired" class="form-label">Skills Required</label>
              <select id="skillsRequired" name="skills[]" class="form-select" multiple required>
                <!-- Options populated dynamically -->
              </select>
            </div>
          </div>
          <!-- Openings -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="openings" class="form-label">Number of Openings</label>
              <input type="number" id="openings" name="openings" class="form-control" min="1" required>
            </div>
          </div>
          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Add Job</button>
        </form>
      </div>
    </div>
  </div>
</div>
